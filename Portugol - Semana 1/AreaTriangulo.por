programa {
  funcao inicio() {
    real base, altura, area

    Escreva("Digite o valor correspondente para a Base do triangulo: ")
    leia(base)

    Escreva("Digite o valor correspondente para a Altura do triangulo ")
    leia(altura)

    area = (base*altura)/2
    Escreva("A área do triangulo é: ", area)
    
  }
}
